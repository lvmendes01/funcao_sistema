@{
    Layout = null;
}



<div class="modal-dialog">
    <div class="modal-content custom-modal-content">
        <div class="modal-header">
            Benifeciarios <!-- Typo: should be "Beneficiários" -->
        </div>
        <div class="modal-body">
            <form id="modalForm">
                <div class="row">

                    <div class="form-group col-md-4">
                        <label for="inputEmail4">CPF</label>
                        <input type="text" class="form-control" id="cpfBeneficiario" name="cpfBeneficiario" placeholder="999.999.999-99" onChange="Validacao_CPF(this)" required>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputNome">Nome</label>
                        <input type="text" class="form-control" id="nomeBeneficiario" name="nomeBeneficiario" required>
                    </div>
                    <div class="form-group col-md-4">
                        <br />
                        <button type="button" id="btn_IncluirBeneficiários" class="btn btn-sm btn-success">Incluir</button>
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="form-group col-md-4">
                        <label for="inputEmail4">CPF</label>

                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputNome">Nome</label>

                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputNome">Ações</label>
                    </div>
                </div>


            </form>
        </div>
    </div>
</div>
<style>
    .custom-modal-content {
        height: auto; /* Altura personalizada */
        overflow-y: auto; /* Adicionar barra de rolagem se necessário */
    }
</style>

<script>

    var urlPostBeneficiários = '@Url.Action("Incluir", "Beneficiario", new { area = "" })';
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

@Scripts.Render("~/bundles/jqueryui")
@Scripts.Render("~/bundles/jtable")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/beneficiarios")
@Scripts.Render("~/bundles/jquerymask")
@Scripts.Render("~/bundles/inputmask")
@Scripts.Render("~/bundles/validacaoCpf")

<script>

    $('#cpfBeneficiario').mask('000.000.000-00');

    $('#btn_IncluirBeneficiários').click(function () {
        try {

            document.getElementById('btn_IncluirBeneficiários')

            $.ajax({
                url: urlPostBeneficiários,
                method: "POST",
                data: {
                    "NOME": $(this).find("#nomeBeneficiario").val(),
                    "CPF": cpfBeneficiario,
                    "IDCLIENTE": $(this).find("#IDCLIENTE").val(),
                },
                error:
                    function (r) {
                        if (r.status == 400)
                            ModalDialog("Ocorreu um erro", r.responseJSON);
                        else if (r.status == 500)
                            ModalDialog("Ocorreu um erro", "Ocorreu um erro interno no servidor.");
                    },
                success:
                    function (r) {
                        ModalDialog("Sucesso!", r)
                        $("#formCadastro")[0].reset();
                        window.location.href = urlRetorno;
                    }
            });
        } catch (error) {
            console.error('Error loading modal content:', error);
        }
    });
</script>
